<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yacob.weekend.Reservation"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.baoyachi.stepview.HorizontalStepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />
    <View
        android:layout_below="@+id/layoutCheckInOut"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مراجعه تفاصيل الحجز"
            android:textAlignment="textEnd"
            android:textSize="20dp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/name_reserv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ici"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"/>
    <View
        android:layout_below="@+id/layoutCheckInOut"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="تواريخ الحجز"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/date_reserv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/tw__blue_default"
            android:layout_marginTop="8dp"
            android:text="Reservation days"
            android:textSize="10dp" />
    </RelativeLayout>

    <fragment
        android:layout_below="@+id/lblDetailDesc"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_reserv"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:context="com.praveenpayasi.kw.ItemDetailsActivity" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="قواعد الامن والسلامه"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_safe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/tv"
            android:layout_alignBottom="@+id/tv"
            android:layout_alignParentStart="true"
            android:background="@color/fui_transparent"
            android:text="اضغط هنا ..."
            android:textAllCaps="false"
            android:textColor="#FF4500"
            android:textSize="15dp" />
    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="يجب اتباع جميع قواعد الامن والسلامه"
            android:textAlignment="textStart"
            android:textSize="20dp" />
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="8dp">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:background="#eeeeee"></View>

        <TextView

            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Security and safety rules"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_blue"
            android:text="التالي"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/fui_transparent"
            android:text="انظر التفاصيل السعر"
            android:textAllCaps="false"
            android:textColor="@color/tw__blue_pressed"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>
