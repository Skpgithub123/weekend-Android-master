<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yacob.weekend.Contactus"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Kuwait "
            android:textStyle="bold"
            android:textSize="17dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/address"
            android:background="@color/fui_transparent"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:src="@drawable/shadow_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="yacob.kazel@gmail.com"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/mail"
            android:background="@color/fui_transparent"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:src="@drawable/shadow_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="+6142965444"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/whatsapp_filled"
            android:background="@color/fui_transparent"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:src="@drawable/shadow_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/com_facebook_button_icon_blue"
            android:paddingRight="15dp"/>
        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twitter"
            android:paddingRight="15dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/whatsapp"
            android:paddingRight="15dp"/>

    </LinearLayout>


</LinearLayout>
