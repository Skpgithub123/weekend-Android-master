    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/itemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_image_background"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/itemsImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/hotel1"
                android:scaleType="fitXY"
                app:riv_corner_radius="6dip"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"/>


        </LinearLayout>


        <TextView
            android:id="@+id/itemLblHouseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HouseName"
            android:textColor="#000000"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/itemsLayout"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/itemLblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#575757"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/itemLblPrice"
            android:layout_alignParentRight="true"/>

