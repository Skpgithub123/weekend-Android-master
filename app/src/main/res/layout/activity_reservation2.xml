<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yacob.weekend.Reservation"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.baoyachi.stepview.HorizontalStepView
            android:id="@+id/step_view2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />
        <View
            android:layout_below="@+id/layoutCheckInOut"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مراجعه شروط تاجير الشاليه"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:text="بعض التعليمات للمؤجرين المقيمين في الشاليه و بعض التفاصيل الاخرى"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/layoutCheckInOut"
            android:orientation="horizontal"
            android:layout_below="@+id/map"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblCheckOutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="وقت الخروج      03:00 م"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="#24242F" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#575757"></View>


            <TextView
                android:id="@+id/lblCheckInTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="وقت الدخول       10:00 ص"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="#24242F" />


        </LinearLayout>

        <View
            android:layout_below="@+id/layoutCheckInOut"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:background="#eeeeee"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/txtrule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="ici"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/rule"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:background="#eeeeee"></View>

        <TextView

            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Security and safety rules"
            android:textSize="15dp" />

        <Button
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_blue"
            android:text="اوافق"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/fui_transparent"
            android:text="انظر التفاصيل السعر"
            android:textAllCaps="false"
            android:textColor="@color/tw__blue_pressed"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>

