<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yacob.weekend.Fragment_favorite">

    <ListView
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lstFavItems"></ListView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/home_fav_preview"
        android:tint="@color/warm_grey_two"
        android:id="@+id/no_favimg"/>

    <TextView
        android:id="@+id/no_favtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="لايوجد شاليهات متوفرة \n لم يتم اضافه اي شاليه للمفضلة"
        app:layout_constraintBottom_toBottomOf="@+id/no_favimg"
        android:paddingBottom="10dp"
        android:textSize="25dp"/>

</android.support.constraint.ConstraintLayout>
